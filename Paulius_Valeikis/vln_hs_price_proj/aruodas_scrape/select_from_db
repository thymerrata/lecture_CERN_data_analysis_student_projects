import duckdb
import pandas as pd

with duckdb.connect("vilnius.db") as con:
    df = con.sql("SELECT * FROM listings LIMIT 10").df()
    pd.set_option("display.max_columns", None)   # show all columns
    pd.set_option("display.width", 2000)
    print(df)
    df2 = con.sql("SELECT * FROM tasks where task_id > 26").df()
    print(df2)
    con.execute("TRUNCATE TABLE listings")
